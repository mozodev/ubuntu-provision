#cloud-config

# package_update: true
# package_upgrade: true

# public keys | ssh_authorized_keys:
ssh_import_id:
  - gh:{{ github_username }}

# @see env.example
write_files:
- path: /root/.env
  content: |
    PHP_VERSION=7.3
    PROJECT_CODE=kyeol-composer
    PROJECT_ROOT=/var/www/kyeol-composer
    MYSQL_VERSION=5.7
# private key
- path: /root/.ssh/id_ras
  content: |

runcmd:
# bootstrap
- curl -sSL https://git.io/J3yLS | bash

# LANG:php
- curl -sSL https://git.io/J3MVp | bash
